<%- include ('../partials/header') %> <%- include ('../partials/menu') %> <%-
include ('../partials/message') %>
<!-- Body with the two div Container elements  -->
<head>
  <!-- <title>Discover Communities</title> -->
  <link rel="stylesheet" href="resources/css/discover.css" />
  

</head>
<body class="bg-light">
  <main>
    
    <div id="Container">
      <div id="CommunityPageContainer">
        <div class="title">Community Page</div>
<!-- Container with Search Bar and Checkboxes -->
          <div class="container">
            <div class="container-with-filters">
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Academic' role="button">Academic</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Business' role="button">Business</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Club' role="button">Club</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Engineering' role="button">Engineering</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Fraternity' role="button">Fraternity</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Hobby' role="button">Hobby</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Sports' role="button">Sports</a>
              </div>
              <div class="form-check">
                <a class="btn btn-outline-success" href='/filter/Sorority' role="button">Sorority</a>
              </div>
            </div>
            <input type="text" id="communitySearch" placeholder="Search Community" class="form-control mt-2">
          </div>


        <hr />
          <table class="table  table-hover">
            <thead>
              <tr class="table-primary">
                <!-- <th>Community ID</th> -->
                <th style="border-top-left-radius: 30px;" scope="col">Community Name</th>
                <th scope="col">Community Filter</th>
                <th scope="col">Community Description</th>
                <th scope="col" style="border-top-right-radius: 30px;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% allCommunities.forEach(community => { %>
              <tr>
                <form method="POST" action="<%- "/addUserToCommunity/" + community.communityid %>">
                  <!-- <td><%= community.communityid %></td> -->
                  <td><%= community.name %></td>
                  <td><%= community.filters %></td>
                  <td><%= community.description %></td>
                  <td>
                    <div class="popup" onclick="myFunction('popup<%= community.name %>')">
                      <button type="submit" id="joinbtn" class="btn btn-primary">Join</button>
                      <span class="popuptext" id="popup<%= community.name %>">Community Joined!</span>
                    </div>
                  </td>
                </form>
              </tr>
              <% }); %>
            </tbody>
          </table>
        
      </div>

      <div id="RandomEventContainer">
        <div class="title">Upcoming Events</div>
        <input type="text" id="eventSearch" placeholder="Search Event" class="form-control">
        <div class="spacing"></div>
        <hr />
          <table class="table table-hover">
            <thead>
              <tr class="table-primary">
                <!-- <th>Event ID</th> -->
                <th style="border-top-left-radius: 30px;">Event Name</th>
                <th>Event Description</th>
                <!-- <th>Event Time</th> -->
                <th>Event Start</th>
                <th>Organised By</th>
                <!-- <th>Event Community</th> -->
                <th style="border-top-right-radius: 30px;"></th>
              </tr>
            </thead>
            <tbody>
              <% allEvents.forEach(event => { %>
              <tr>
                <form method="POST" action="<%- "/addUserToEvent/" + event.id %>">
                  <!-- <td><%= event.eventid %></td> -->
                  <td><%= event.title %></td>
                  <td><%= event.description %></td>
                  <td><%= event.start %></td>
                  <!-- <td><%= event.time %></td> -->
                  <td><%= event.community_name %></td>
                  <!-- <td><%= event.communityid %></td> -->
                  <td>
                    <div class="popup" onclick="myFunction('popup<%= event.id %>')">
                      <button type="submit" class="btn btn-primary">Join</button>
                      <span class="popuptext" id="popup<%= event.id %>">Event Joined!</span>
                    </div>
                  </td>
                </form>
              </tr>
              <% }); %>
            </tbody>
          </table>
      </div>
    </div>
    <script>
      function myFunction(popupId) {
        var popup = document.getElementById(popupId);
        popup.classList.toggle("show");
        setTimeout(() => {
          popup.classList.add("hide");
        }, 1100);
      }

      // Search Functionality
      function search(inputId, containerId) {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById(inputId);
        filter = input.value.toUpperCase();
        table = document.getElementById(containerId);
        tr = table.getElementsByTagName("tr"); //accessing the table rows
        //tr is assigned the collection of all tr (table row) elements within the specified table.

        for (i = 0; i < tr.length; i++) {
          td = tr[i].getElementsByTagName("td")[0]; // Accessing the first column to be searched which are the community/event names
          if (td) {
            txtValue = td.textContent || td.innerText; //retrieves the text content (txtValue)
            
            //this if statement checks if the uppercase version of the txtValue contains the uppercase version of the filter string. If it does, it means there's a match, and the row is displayed (tr[i].style.display = ""). Otherwise, the row is hidden (tr[i].style.display = "none").
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }

      // Event and Community Search
      document.getElementById("communitySearch").addEventListener("input", function () {
        search("communitySearch", "CommunityPageContainer");
      });

      document.getElementById("eventSearch").addEventListener("input", function () {
        search("eventSearch", "RandomEventContainer");
      });

    </script>
  </main>
</body>

